<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nandy.reader">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ellingvo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.nandy.reader.app.TRApp"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.nandy.reader.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.nandy.reader.activity.MainActivity"/>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="be83456274c62551fc315a906a6d05a2bcf43a2e" />
    </application>

</manifest>