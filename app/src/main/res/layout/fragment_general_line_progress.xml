<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:id="@+id/info"
        android:paddingEnd="30dp"
        android:text="General progress represents your average learing progress.Graph is based on your tests results for selected period."
        android:textColor="@color/pale_sandy_brown" />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart_general_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info"
        android:layout_above="@+id/radio_group"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Day"
            android:textColor="@color/biege"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/button_months"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="Month"
            android:textColor="@color/biege"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/button_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.33"
            android:background="@drawable/radio_button"
            android:button="@android:color/transparent"
            android:checked="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="Year"
            android:textColor="@color/biege"
            android:textStyle="italic" />
    </RadioGroup>


</RelativeLayout>


