<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5">

    <RelativeLayout
        android:id="@+id/gridView_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/layout_cover"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp">


            <ImageView
                android:id="@+id/item_cover"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:src="@drawable/book" />


            <TextView
                android:id="@+id/item_extension"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/item_cover"
                android:layout_marginTop="5dp"
                android:background="@drawable/label_rectangle"
                android:gravity="center"
                android:text="PDF"
                android:textColor="@color/white"
                android:textSize="@dimen/text_10"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="@dimen/text_8"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="2"
            android:minLines="2"
            android:text="Author - \'Book name\'"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_14" />


    </RelativeLayout>
</RelativeLayout>
