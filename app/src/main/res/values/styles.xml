<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/amber_dark</item>
        <item name="colorPrimary">@color/amber_primary</item>
        <item name="colorAccent">@color/grey_accent</item>
        <item name="android:textColorPrimary">@color/grey_primary</item>
        <item name="android:textColor">@color/grey_primary</item>
        <item name="android:startColor">@color/amber_dark</item>
        <item name="android:colorBackground">@color/colorLightPrimary</item>

    </style>

    <style name="showScalingAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/show_popup_in</item>
        <item name="android:windowExitAnimation">@anim/show_popup_out</item>
    </style>

    <style name="PagerTabTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>
</resources>
